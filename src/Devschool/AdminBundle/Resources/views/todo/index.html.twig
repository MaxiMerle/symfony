<div class="carousel fade-carousel slide" data-ride="carousel" data-interval="4000" id="bs-carousel">
  <!-- Overlay -->
  <div class="overlay"></div>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item slides active">
      <div class="slide-1"></div>
      <div class="hero">
        <hgroup>
            <h1>Bienvenue sur la page Admin</h1>        
            <h3 style="color: black;">Ajoutez quelque chose ! </h3>
             <a href="{{ ('/admin/create') }}" class="btn btn-warning btn-lg" role="button">Ajouter un Livre</a>
        <a href="{{ ('/admin/create') }}" class="btn btn-success btn-lg" role="button">Ajouter un Film</a>
