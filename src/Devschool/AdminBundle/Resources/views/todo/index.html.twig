</div>









    <div class="container">
        <div class="row">
            <div class="col-md-12" style="text-align: center;">
                {% for flash_message in app.session.flashbag.get('notice') %}
                    <div class="alert alert-success">
                        {{flash_message}}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
        <div id="content">
            {% block body %}
            <div class="container">
            <h2 class="page-header"> GÉRER LES FILMS</h2>
            <div class="row">
          
            <div class="col-md-12 center">
                <table class="table table-striped"> 
                    <thead> 
                    <tr>
                        <th></th> 
                        <th>Noms des Films</th> 
                        <th>Realisateurs</th> 
                        <th></th>
                    </tr> 
                    </thead> 
                    <tbody> 
                    {% for film in films %}
                    <tr> 
                        <th scope="row">{{film.id}}</th> 
                            <td>{{ film.titre }}</td> 
                            <td>{{film.realisateur}}</td>  
                            <td>
                            <a href="{{ path('page_film', {'id': film.id}) }}" class="btn btn-success">Details</a>
                            <a href="{{ path('page_edit', {'id': film.id}) }}" class="btn btn-default">Modifier</a>
                            <a href="{{ path('page_delete', {'id': film.id}) }}" class="btn btn-danger">Supprimer</a>
                            </td>
                    </tr>
                     {% endfor %} 
                    </tbody> 
                </table>
                </div>
                </div>
                <div class="row">
                <h2 class="page-header">Ajouter un Film</h2> 
                <a class="btn btn-primary" href="{{ ('/admin/create') }}">Nouveau</a>
                </div>
                </div>
            {% endblock %}
        </div>
    </body>
</html>