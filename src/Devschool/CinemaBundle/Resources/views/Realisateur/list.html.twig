                            Né le  {{realisateur.naissance|date('Y-m-d')}} <br />
                            <br />
                            <p></p>
                            <hr />
                            <div class="text-right">
                                <a href="{{ path('page_realisateur',{'id' : realisateur.id}) }}" class="btn btn-success">Voir ses films</a>
